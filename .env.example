# KSU IT RAG Chatbot - Environment Variables
# Copy this file to .env and fill in your values
# DO NOT commit .env to git (it's in .gitignore)

# API Configuration
API_TITLE=KSU IT RAG Chatbot API
API_DESCRIPTION=Retrieval-Augmented Generation API for KSU IT Department
API_VERSION=0.1.0

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=False

# CORS Configuration
CORS_ORIGINS=*
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# Pinecone Vector Database Configuration (Cloud-based for team collaboration)
# Get your API key from: https://www.pinecone.io/
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-east-1-aws
PINECONE_INDEX_NAME=ksu-it-rag-chatbot

# Embedding Model Configuration
EMBEDDING_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# LLM Configuration
LLM_PROVIDER=huggingface
LLM_MODEL_NAME=

# OpenAI Configuration (if using OpenAI)
OPENAI_API_KEY=your_openai_api_key_here

# Hugging Face Configuration (if using Hugging Face)
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
HUGGINGFACE_MODEL_NAME=microsoft/DialoGPT-medium
